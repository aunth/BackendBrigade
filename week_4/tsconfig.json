{
	"compilerOptions": {
	  "target": "ES6",                     
	  "module": "CommonJS",                
	  "outDir": "./dist",                  
	  "strict": true,
	  "strictPropertyInitialization": false,                     
	  "esModuleInterop": true,             
	  "skipLibCheck": true,                
	  "forceConsistentCasingInFileNames": true,
	  "emitDecoratorMetadata": true,
	  "experimentalDecorators": true,
	},
	"include": ["src/**/*.ts"],          
	"exclude": ["node_modules"]    
  }